{
  "title": "Molmo2-8B Serverless Worker",
  "description": "Runpod Hub worker for allenai/Molmo2-8B (multimodal VLM).",
  "type": "serverless",
  "category": "language",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 40,
    "gpuCount": 1,
    "gpuIds": "AMPERE_80,ADA_48_PRO,AMPERE_48",
    "allowedCudaVersions": [
      "12.8",
      "12.7",
      "12.6",
      "12.5",
      "12.4",
      "12.3",
      "12.2",
      "12.1",
      "12.0"
    ],
    "env": [
      {
        "key": "HUGGINGFACE_HUB_TOKEN",
        "input": {
          "type": "string",
          "name": "Hugging Face token",
          "description": "Optional token for faster or gated model downloads",
          "default": "",
          "advanced": true
        }
      }
    ]
  }
}
